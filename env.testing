# Configuración de testing
DEBUG=true
LOG_LEVEL=debug

# Base de datos de testing
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mariachi_fidelizacion_test

# Redis de testing
REDIS_URL=redis://localhost:6379/1

# JWT
SECRET_KEY=test-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# APIs Externas (mock para testing)
INSTAGRAM_CLIENT_ID=test-instagram-client-id
INSTAGRAM_CLIENT_SECRET=test-instagram-client-secret
YOUTUBE_API_KEY=test-youtube-api-key

# Odoo (mock para testing)
ODOO_URL=http://localhost:8069
ODOO_DATABASE=test_odoo_db
ODOO_USERNAME=test_user
ODOO_PASSWORD=test_password

# Email (mock para testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test@example.com
SMTP_PASSWORD=test_password
EMAIL_FROM=test@example.com

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting (deshabilitado para testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=test_uploads

# Analytics
ANALYTICS_CACHE_TTL=60  # 1 minuto para testing
ANALYTICS_BATCH_SIZE=10

# Notifications
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_RETRY_ATTEMPTS=1
NOTIFICATION_RETRY_DELAY=1

# Odoo Sync
ODOO_SYNC_BATCH_SIZE=10
ODOO_SYNC_RETRY_ATTEMPTS=1
ODOO_SYNC_RETRY_DELAY=1

# Stickers
STICKER_EXPIRATION_DAYS=1  # 1 día para testing
STICKER_BATCH_SIZE=10

# Videos
VIDEO_WATCH_THRESHOLD=0.5  # 50% para testing
VIDEO_ANALYTICS_BATCH_SIZE=10

# Logging
LOG_FORMAT=text
LOG_FILE=logs/test.log
LOG_MAX_SIZE=1048576  # 1MB
LOG_BACKUP_COUNT=2

# Testing
TESTING=true
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mariachi_fidelizacion_test
TEST_REDIS_URL=redis://localhost:6379/1
